{
  "name": "@omniskill/api",
  "type": "module",
  "exports": {
    ".": {
      "bun": "./src/index.ts",
      "default": "./dist/index.mjs"
    },
    "./*": {
      "bun": "./src/*.ts",
      "default": "./src/*.ts"
    }
  },
  "scripts": {
    "build": "bun build ./src/index.ts --outfile ./dist/index.mjs --target=node --format=esm"
  },
  "dependencies": {
    "@omniskill/auth": "workspace:*",
    "@omniskill/db": "workspace:*",
    "@omniskill/env": "workspace:*",
    "@trpc/client": "catalog:",
    "@trpc/server": "catalog:",
    "dotenv": "catalog:",
    "drizzle-orm": "^0.45.1",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@omniskill/config": "workspace:*",
    "hono": "catalog:",
    "typescript": "catalog:"
  }
}
