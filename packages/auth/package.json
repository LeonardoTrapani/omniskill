{
  "name": "@omniscient/auth",
  "type": "module",
  "exports": {
    ".": {
      "bun": "./src/index.ts",
      "default": "./dist/index.mjs"
    },
    "./*": {
      "bun": "./src/*.ts",
      "default": "./src/*.ts"
    }
  },
  "scripts": {
    "build": "bun build ./src/index.ts --outfile ./dist/index.mjs --target=node --format=esm"
  },
  "dependencies": {
    "@omniscient/db": "workspace:*",
    "@omniscient/env": "workspace:*",
    "better-auth": "catalog:",
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@omniscient/config": "workspace:*",
    "typescript": "catalog:"
  }
}
