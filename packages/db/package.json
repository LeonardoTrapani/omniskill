{
  "name": "@omniscient/db",
  "type": "module",
  "exports": {
    ".": {
      "bun": "./src/index.ts",
      "default": "./dist/index.mjs"
    },
    "./*": {
      "bun": "./src/*.ts",
      "default": "./src/*.ts"
    }
  },
  "scripts": {
    "build": "bun build ./src/index.ts --outfile ./dist/index.mjs --target=node --format=esm",
    "db:push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate",
    "db:studio": "drizzle-kit studio",
    "db:migrate": "drizzle-kit migrate"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.2",
    "@omniscient/env": "workspace:*",
    "dotenv": "catalog:",
    "drizzle-orm": "^0.45.1",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@omniscient/config": "workspace:*",
    "drizzle-kit": "^0.31.8",
    "typescript": "catalog:"
  }
}
