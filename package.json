{
  "name": "omniscient",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "typescript": "^5",
      "@types/bun": "^1.3.4",
      "hono": "^4.8.2",
      "@trpc/server": "^11.7.2",
      "better-auth": "^1.4.18",
      "@trpc/client": "^11.7.2"
    }
  },
  "type": "module",
  "scripts": {
    "dev": "turbo dev --filter=!cli",
    "cli": "bun run --cwd apps/cli src/index.ts",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:cli": "turbo -F cli dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @omniscient/db db:push",
    "db:studio": "turbo -F @omniscient/db db:studio",
    "db:generate": "turbo -F @omniscient/db db:generate",
    "db:migrate": "turbo -F @omniscient/db db:migrate",
    "scrape:ingest": "turbo -F @omniscient/scraping scrape:ingest",
    "scrape:pipeline": "turbo -F @omniscient/scraping scrape:pipeline",
    "check": "oxlint && oxfmt --write",
    "prepare": "husky"
  },
  "dependencies": {
    "@omniscient/env": "workspace:*",
    "dotenv": "catalog:",
    "motion": "^12.34.3",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@omniscient/config": "workspace:*",
    "@types/bun": "catalog:",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "oxfmt": "^0.26.0",
    "oxlint": "^1.41.0",
    "turbo": "^2.6.3",
    "typescript": "catalog:"
  },
  "lint-staged": {
    "*": [
      "oxlint",
      "oxfmt --write"
    ]
  },
  "packageManager": "bun@1.3.5"
}
