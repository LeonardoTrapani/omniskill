{
  "name": "better-skills",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "typescript": "^5",
      "@types/bun": "^1.3.4",
      "hono": "^4.8.2",
      "@trpc/server": "^11.7.2",
      "better-auth": "^1.4.18",
      "@trpc/client": "^11.7.2"
    }
  },
  "type": "module",
  "scripts": {
    "dev": "turbo dev --filter=!cli",
    "cli": "bun run --cwd apps/cli src/index.ts",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:cli": "turbo -F cli dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @better-skills/db db:push",
    "db:studio": "turbo -F @better-skills/db db:studio",
    "db:generate": "turbo -F @better-skills/db db:generate",
    "db:migrate": "turbo -F @better-skills/db db:migrate",
    "check": "oxlint && oxfmt --write",
    "sync-default-skills": "bun --env-file=apps/server/.env run packages/auth/src/sync-default-skills.ts",
    "prepare": "husky"
  },
  "dependencies": {
    "@better-skills/env": "workspace:*",
    "@vercel/analytics": "^1.6.1",
    "dotenv": "catalog:",
    "lucide": "^0.575.0",
    "motion": "^12.34.3",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@better-skills/config": "workspace:*",
    "@types/bun": "catalog:",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "oxfmt": "^0.26.0",
    "oxlint": "^1.41.0",
    "turbo": "^2.6.3",
    "typescript": "catalog:"
  },
  "lint-staged": {
    "*": "oxlint",
    "*.{ts,tsx,js,jsx,mts,cts,mjs,cjs}": "oxfmt --write"
  },
  "packageManager": "bun@1.3.5"
}
